{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/activadee/opencode-auth-sync/main/schema.json",
  "title": "opencode-auth-sync configuration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable the plugin"
    },
    "credentialsPath": {
      "type": "string",
      "default": "~/.local/share/opencode/auth.json",
      "description": "Path to OpenCode auth file (supports ~ expansion)"
    },
    "secretName": {
      "type": "string",
      "default": "OPENCODE_AUTH",
      "description": "Name of the GitHub secret to create/update"
    },
    "repositories": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[\\w.-]+/[\\w.-]+$"
      },
      "default": [],
      "description": "List of repositories in 'owner/repo' format"
    },
    "debounceMs": {
      "type": "integer",
      "default": 1000,
      "minimum": 100,
      "description": "Debounce delay in milliseconds for file changes"
    },
    "authFileHashes": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Per-repository SHA-256 hashes of last synced auth.json (managed by plugin)"
    },
    "method": {
      "type": "string",
      "enum": ["gh", "http"],
      "default": "gh",
      "description": "Method to use for GitHub API calls: 'gh' (CLI) or 'http' (direct API)"
    },
    "githubToken": {
      "type": "string",
      "description": "GitHub personal access token (required when method is 'http')"
    }
  },
  "required": ["repositories"],
  "additionalProperties": false,
  "if": {
    "properties": { "method": { "const": "http" } }
  },
  "then": {
    "required": ["repositories", "githubToken"]
  }
}
