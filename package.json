    "url": "https://github.com/activadee/opencode-auth-sync/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "chokidar": "^3.6.0",
    "picocolors": "^1.1.1"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "*",
    "@opencode-ai/sdk": "*"
